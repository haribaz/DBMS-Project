<div class="form-container">
    <h2> Add a New Actor</h2>
    <form method="post" action="/api/admin/actor/add" enctype="multipart/form-data" class="mt-5">
        <div class="row">
            <div class="form-item-movie col">
                <label>Name</label>
                <input class="form-control form-input-movie" type="text" name="name" placeholder="Name">
            </div>
            <div class="form-item-movie col">
                <label>Age</label>
                <input class="form-control form-input-movie" type="number" name="age" placeholder="Age">
            </div>
            <div class="form-item-movie col">
                <label>Actor Image</label>
                <input type="file" class="form-control form-input-movie" name="coverImg">
            </div>
        </div>
        <div class="row">
            <div class="form-item-movie col">
                <label class="form-label">Bio</label>
                <textarea class="form-control form-input-movie" name="bio" rows="3"></textarea>
            </div>
        </div>
        <div class="d-flex flex-row-reverse">
            <button type="submit" class="form-item-movie btn btn-primary">Create</button>
        </div>
    </form>
</div>