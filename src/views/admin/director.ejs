<form method="GET" class="d-flex">
	<input class="form-control" type="text" style="margin-right: 1rem; background-color: var(--color-text-light);" name="title" placeholder="Search Director">
	<button class="btn btn-primary" type="submit">Search</button>
</form>

<div class="grid-container">
	<% details.forEach((director) => { %>
	<div class="movie-card card">
		<img
			src="/api/images/<%= director.coverImage %>"
			class="card-img-top"
			alt="..."
		/>
		<div class="text-center card-body">
			<h5 class="card-title movie-title"><%= director.name %></h5>
			<div class="movie-btn-grid">
				<button
					class="btn btn-primary"
					data-bs-toggle="collapse"
					data-bs-target="#collapse<%= i %>"
				>
					See More
				</button>
				<a href="/api/admin/actor/<%= director.id %>" class="btn btn-primary">Director</a>
			</div>
			<div class="collapse text-primary mt-3" id="collapse<%= i %>">
				<div class="card-body">
					Best Movie: <%= director.bestMovie %>
					<br />
					Favourite Genre: <%= director.favouriteGenre %>
				</div>
			</div>
		</div>
	</div>
	<% } %>
</div>

<a class="fixed-button btn" href="/api/admin/director/add"><i class="plus-sign fas fa-plus"></i></a>
