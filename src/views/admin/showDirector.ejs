<div class="mt-5 d-flex justify-content-evenly">
    <div>
       <img class="movie-cover" src="https://m.media-amazon.com/images/M/MV5BMTMxNTMwODM0NF5BMl5BanBnXkFtZTcwODAyMTk2Mw@@._V1_FMjpg_UX1000_.jpg">
       <div class="mt-3 btn-row-movie d-flex">
         <button type="button" class="btn-movie btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Delete
          </button>
         <a href="/admin/editDirector" class="btn-movie btn btn-primary">
            Edit
         </a>
       </div>
    </div>
    <div class="movie-details-grid align-self-center">
       <table class="movie-details-table">
          <tr>
             <td class="table-cell-alt"><div class="movie-details-label">Name</div></td>
             <td  class="table-cell"><div>Dark Knight</div></td>
          </tr>
          <tr>
             <td class="table-cell-alt"><div class="movie-details-label">Favourite Genre</div></td>
             <td class="table-cell"><div>10/10/2009</div></td>
 
          </tr>
          <tr>
             <td class="table-cell-alt"><div class="movie-details-label">Bio</div></td>
             <td class="table-cell"><div>Great Man</div></td>
 
          </tr>
       </table>
    </div>
 </div>

 <hr class="mt-5 mb-5">

 <div>
    <h2>Movies by Director</h2>
    <div class="grid-container-small">
       <% for(let i=0; i<5; i++) { %>
         <a href="#"><img class="director-movie movie-cover-small" src="https://i.pinimg.com/originals/d8/b6/f4/d8b6f4918c3d0e6ebc8440f8ab6c58a2.jpg"></a>
       <% } %>
    </div>
 </div>

  <!-- delete modal -->
<div style="color: var(--color-background-dark)" class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel">
   <div class="modal-dialog">
     <div class="modal-content">
       <div class="modal-header">
         <h5 class="modal-title" id="exampleModalLabel">Delete Director</h5>
         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
       </div>
       <div class="modal-body">
         Are you sure you want to delete this director?
       </div>
       <div class="modal-footer">
         <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
         <form method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
         </form>
       </div>
     </div>
   </div>
 </div>