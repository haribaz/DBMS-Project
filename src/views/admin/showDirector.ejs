<div class="mt-5 d-flex justify-content-evenly">
    <div>
       <img class="movie-cover" src="/api/images/<%= details.coverImage %>">
       <div class="mt-3 btn-row-movie d-flex">
         <button type="button" class="btn-movie btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Delete
          </button>
         <a href="/api/admin/director/edit/<%= details.id %>" class="btn-movie btn btn-primary">
            Edit
         </a>
       </div>
    </div>
    <div class="movie-details-grid align-self-center">
       <table class="movie-details-table">
          <tr>
             <td class="table-cell-alt"><div class="movie-details-label">Name</div></td>
             <td  class="table-cell"><div><%= details.name %></div></td>
          </tr>
          <tr>
             <td class="table-cell-alt"><div class="movie-details-label">Favourite Genre</div></td>
             <td class="table-cell"><div><%= details.favouriteGenre %></div></td>
 
          </tr>
          <tr>
             <td class="table-cell-alt"><div class="movie-details-label">Bio</div></td>
             <td class="table-cell"><div><%= details.bio %></div></td>
 
          </tr>
       </table>
    </div>
 </div>

 <hr class="mt-5 mb-5">

 <div>
    <h2>Movies by Director</h2>
    <div class="grid-container-small">
       <% details.movies.forEach((movie) => { %>
         <a href="/api/admin/movie/show/<%= movie._id %>"><img class="director-movie movie-cover-small" src="/api/images/<%= movie.coverImage %>"></a>
       <% }) %>
    </div>
 </div>

  <!-- delete modal -->
<div style="color: var(--color-background-dark)" class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel">
   <div class="modal-dialog">
     <div class="modal-content">
       <div class="modal-header">
         <h5 class="modal-title" id="exampleModalLabel">Delete Director</h5>
         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
       </div>
       <div class="modal-body">
         Are you sure you want to delete this director?
       </div>
       <div class="modal-footer">
         <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
         <form action="/api/admin/director/delete/<%= details.id %>?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
         </form>
       </div>
     </div>
   </div>
 </div>