<div class="collapse" id="expanded-form" >
	<div class="card card-body bg-secondary">
		<form action="/api/user/search/" method="GET">
			<input class="form-control mb-3" placeholder="Movie Name" name="title" />
			<select class="form-select mb-3" name="genre">
				<option value="" disabled hidden selected>Genre</option>
				<% genres.forEach((genre) => { %>
				<option value="<%= genre.name %>"><%= genre.name %></option>
				<% }) %>
			</select>
			<select class="form-select mb-3" name="actor">
				<option value="" disabled hidden selected>Actor</option>
				<% actors.forEach((actor) => { %>
				<option value="<%= actor.name %>"><%= actor.name %></option>
				<% }) %>
			</select>
			<select class="form-select mb-3" name="director">
				<option value="" disabled hidden selected>Director</option>
				<% directors.forEach((director) => { %>
				<option value="<%= director.name %>"><%= director.name %></option>
				<% }) %>
			</select>
			<button type="submit" class="btn btn-primary" style="margin-left: 70.5%;">Search</button>
		</form>
	</div>
</div>


