<h1 style="text-align: center;">Directors</h1>
<br>
<form method="GET" class="d-flex">
	<input class="form-control" type="text" style="margin-right: 1rem; background-color: var(--color-text-light);" name="title" placeholder="Search Director">
	<button class="btn btn-primary" type="submit">Search</button>
</form>
<br>

<div class="grid-container">
	<% for(let i=0; i<10; i++) { %>
	<div class="movie-card card">
		<img
			src="https://i.pinimg.com/originals/d8/b6/f4/d8b6f4918c3d0e6ebc8440f8ab6c58a2.jpg"
			class="card-img-top"
			alt="..."
		/>
		<div class="text-center card-body">
			<h5 class="card-title movie-title">Card title</h5>
			<div class="follow-grid">
				<form method="post">
					<button type="submit" class="follow-button btn btn-primary">
						Follow
					</button>
				</form>
				<a href="/user/showDirector" class="btn btn-primary"
					>Director Page</a
				>
			</div>
		</div>
	</div>
	<% } %>
</div>

<a class="fixed-button btn" href="/admin/addActor"><i class="plus-sign fas fa-plus"></i></a>
