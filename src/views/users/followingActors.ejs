<h2 style="text-align: center;">Following Actors</h2>
<div class="grid-container-small">
    <% details.forEach((actor) => { %>
        <div>
            <a href="/api/user/actor/show/<%= actor.id %>"><img class="director-movie movie-cover" src="/api/images/<%= actor.coverImage %>"></a>
            <div class="mt-3 d-flex justify-content-center">
                <form action="/api/user/follow/actor/<%= actor.id %>/isFollow?_method=PUT" method="post">
                    <button type="submit" class="follow-button btn btn-primary">
                        Unfollow
                    </button>
                </form>
            </div>
        </div>
    <% }) %>
</div>