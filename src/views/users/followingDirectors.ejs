<h2 style="text-align: center;">Following Directors</h2>
<div class="grid-container-small">
    <% details.forEach((director) => { %>
        <div>
            <a href="/api/user/director/show/<%= director.id %>"><img class="director-movie movie-cover" src="/api/images/<%= director.coverImage %>"></a>
            <div class="mt-3 d-flex justify-content-center">
                <form action="/api/user/follow/director/<%= director.id %>/isFollow?_method=PUT" method="post">
                    <button type="submit" class="follow-button btn btn-primary">
                        Unfollow
                    </button>
                </form>
            </div>
        </div>
    <% }) %>
</div>